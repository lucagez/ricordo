  "bugs": {
    "url": "https://github.com/lucagez/ricordo/issues"
  },
  "homepage": "https://github.com/lucagez/ricordo#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "microbundle": "^0.11.0",
    "mocha": "^6.1.4"
  }
}
